@model KimdolSoft.Models.Devolucion_Detalle

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
<script src="//code.jquery.com/jquery-1.10.2.js"></script>
<script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
<br /><br /><br /><br /><br /><br /><br /><br />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div>
        <div class="container">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"> Devolución </h3>
                </div>
                <div class="panel-body">
                    <div>
                        <div class="container">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title"> Información del proveedor</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="form-horizontal">

                                        <div class="form-group">
                                            @Html.LabelFor(model => model.devolucion.idProveedor, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-4">
                                                @Html.DropDownListFor(model => model.devolucion.idProveedor, new SelectList(ViewBag.idProveedor, "idProveedor", "empresa"), ViewData["IdProveedorSeleccionado"].ToString(), htmlAttributes: new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.devolucion.idProveedor, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="container">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Información de la devolución</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                                        <div class="form-group">
                                            @Html.LabelFor(model => model.devolucion.fechaDevolucion, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-4 ">
                                                @Html.EditorFor(model => model.devolucion.fechaDevolucion, new { htmlAttributes = new { @class = "form-control", @id = "calendario", @placeholder = "yyyy-MM-dd" } })
                                                @Html.ValidationMessageFor(model => model.devolucion.fechaDevolucion, "", new { @class = "text-danger" })
                                            </div>
                                            @Html.LabelFor(model => model.devolucion.estado, htmlAttributes: new { @class = "control-label col-md-2" })
                                            <div class="col-md-4">
                                                @Html.DropDownListFor(model => model.devolucion.estado,
                                new List<SelectListItem> {
                                new SelectListItem { Text="Activo"},
                                new SelectListItem { Text="Inactivo"}
                                },
                                new { @class = "myselect form-control" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="container">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Detalle de devolución</h3>
                                </div>
                                <div class="panel-body">
                                    <div class="form-horizontal">
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.dtDevolucion.idProducto, "* Producto", htmlAttributes: new { @class = "control-label col-md-4" })

                                                <div class="col-md-8">
                                                    @Html.DropDownListFor(model => model.dtDevolucion.idProducto, new SelectList(ViewBag.idProducto, "idProducto", "nombre"), ViewData["IdProductoSeleccionado"].ToString(), htmlAttributes: new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(model => model.dtDevolucion.idProducto, "", new { @class = "text-danger" })
                                                </div>

                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.dtDevolucion.descripcion, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.dtDevolucion.descripcion, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.dtDevolucion.descripcion, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.dtDevolucion.cantidadADevolver, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.dtDevolucion.cantidadADevolver, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.dtDevolucion.cantidadADevolver, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                @Html.LabelFor(model => model.dtDevolucion.cantidadPendiente, htmlAttributes: new { @class = "control-label col-md-4" })
                                                <div class="col-md-8">
                                                    @Html.EditorFor(model => model.dtDevolucion.cantidadPendiente, new { htmlAttributes = new { @class = "form-control" } })
                                                    @Html.ValidationMessageFor(model => model.dtDevolucion.cantidadPendiente, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-offset-2 col-md-10">
                                                <input type="submit" value="Registrar" class="btn btn-default" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        @*<input type="button" value="safads" onclick="location.href='@Url.Action("prueba", "detalledevolucions")'" />*@
                    </div>
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script>
    $(function () {
        $.datepicker.regional['es'] = {
            closeText: 'Cerrar',
            prevText: '<Ant',
            nextText: 'Sig>',
            currentText: 'Hoy',
            monthNames: ['Enero', 'Febrero', 'Marzo', 'Abril', 'Mayo', 'Junio', 'Julio', 'Agosto', 'Septiembre', 'Octubre', 'Noviembre', 'Diciembre'],
            monthNamesShort: ['Ene', 'Feb', 'Mar', 'Abr', 'May', 'Jun', 'Jul', 'Ago', 'Sep', 'Oct', 'Nov', 'Dic'],
            dayNames: ['Domingo', 'Lunes', 'Martes', 'Miércoles', 'Jueves', 'Viernes', 'Sábado'],
            dayNamesShort: ['Dom', 'Lun', 'Mar', 'Mié', 'Juv', 'Vie', 'Sáb'],
            dayNamesMin: ['Do', 'Lu', 'Ma', 'Mi', 'Ju', 'Vi', 'Sá'],
            weekHeader: 'Sm',
            firstDay: 1,
            isRTL: false,
            showMonthAfterYear: false,
            yearSuffix: ''
        };
        $.datepicker.setDefaults($.datepicker.regional['es']);
        $("#calendario").datepicker({ dateFormat: 'yy-mm-dd' });
        $("#devolucion_idProveedor").select2();
        $("#dtDevolucion_idProducto").select2();
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
