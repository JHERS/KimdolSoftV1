@model KimdolSoft.Models.cliente


@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br /><br /><br /><br /><br /><br />

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"> Eliminar cliente </h3>
        </div>
        <div class="panel-body">
            <div>
                <table data-toggle="table"
                       data-query-params="queryParams"
                       class="table table-hover">
                    <thead>
                        <tr class="active">
                            <th>
                                ID
                            </th>
                            <th>
                                Primer Nombre
                            </th>
                            <th>
                                Segundo nombre
                            </th>
                            <th>
                                Primer Apellido
                            </th>
                            <th>
                                Segundo Apellido
                            </th>
                            <th>
                                Telefono
                            </th>
                            <th>
                                Celular
                            </th>
                            <th>
                                Email
                            </th>
                            <th>
                                Dirección
                            </th>
                            <th>
                                Barrio
                            </th>
                            <th>
                                Estado
                            </th>

                        </tr>
                    </thead>

                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.idCliente)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.primerNombre)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.segundoNombre)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.primerApellido)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.segundoApellido)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.telefono)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.celular)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.email)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.direccion)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.barrio)
                        </td>

                        <td>
                            @Html.DisplayFor(model => model.estado)
                        </td>

                    </tr>
                </table>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <br />
                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-default" />
                    </div>
                }
            </div>
        </div>

    </div>
    <div>
        @Html.ActionLink("Regresar", "Index")
    </div>
</div>

