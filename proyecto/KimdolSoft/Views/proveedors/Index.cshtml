@model IEnumerable<KimdolSoft.Models.proveedor>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<br /><br /><br /><br /><br /><br /><br /><br />

@if (ViewBag.mensajeRegistro == null)
{

}
else
{
    <div class="alert alert-success">
        @ViewBag.mensajeRegistro
    </div>
}


@if (ViewBag.mensajeEditar == null)
{

}
else
{
    <div class="alert alert-success">
        @ViewBag.mensajeEditar
    </div>
}

@if (ViewBag.mensajeEliminar == null)
{

}
else
{
    <div class="alert alert-success">
        @ViewBag.mensajeEliminar
    </div>
}


<table id="tabla" class="display responsive" width="100%">
    <thead>
        <tr>
            <th>
                NIT - Documento
            </th>

            <th>
                Nombre
            </th>
            <th>
                Dirección
            </th>
            <th>
                Email
            </th>
            <th>
                Teléfono
            </th>
            <th>
                Estado
            </th>
            <th>
                Ver
            </th>
            <th>
                Editar
            </th>
            <th>
                Eliminar
            </th>

        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.idProveedor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.empresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.direccionEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emailEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.telefonoEmpresa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.estado)
            </td>

            <td>
                <a href="@Url.Action("Details", new { id = item.idProveedor})">
                    <i class="glyphicon glyphicon-search"></i>
                    <span class="sr-only"></span>
                </a>
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.idProveedor})">
                    <i class="glyphicon glyphicon-pencil"></i>
                    <span class="sr-only"></span>
                </a>
            </td>
            <td>
                <a href="@Url.Action("Delete", new { id = item.idProveedor})">
                    <i class="glyphicon glyphicon-remove"></i>
                    <span class="sr-only"></span>
                </a>
            </td>


        </tr>
    }

</table>
@*</div>*@

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tabla').DataTable({
                "language": {
                    "url" : "@Url.Content("~/Scripts/DataTables/lenguaje.json")"
            }
        });
        });
    </script>

}