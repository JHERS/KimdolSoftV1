@model KimdolSoft.Models.detallecompra

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<<br /><br /><br /><br /><br /><br /><br />

<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"> Eliminar compra </h3>
        </div>
        <div class="panel-body">
            <div>
                <table class="table table-bordered">
                    <tr class="active">
                        
                        <th> NIT - Documento</th>
                        <th> Proveedor</th>
                        <th>Fecha Compra</th>
                        <th>Valor Compra</th>
                        <th>Descuento</th>
                        <th>Estado</th>
                    </tr>
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.compra.proveedor.idProveedor)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.compra.proveedor.empresa)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.compra.fechaCompra)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.compra.valorCompra)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.compra.descuento)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.compra.estado)
                        </td>
                    </tr>
                </table>

                @using (Html.BeginForm())
            {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Eliminar" class="btn btn-default" />

                    </div>
                }
            </div>
        </div>

    </div>
    <div>
        @Html.ActionLink("Regresar", "Index")
    </div>
</div>



