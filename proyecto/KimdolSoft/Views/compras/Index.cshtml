@model IEnumerable<KimdolSoft.Models.compra>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br /><br /><br /><br /><br /><br />

<p align="right">
    @Html.ActionLink("Registrar Compra", "Create")
</p>
<div class="table-responsive">
    <table data-toggle="table"
           data-query-params="queryParams"
           data-search="true">
        <thead>
            <tr class="active">
                <th>
                    Proveedor
                </th>
                <th>
                    Empresa
                </th>
                <th>
                    Fecha de compra
                </th>
                <th>
                    Descuento
                </th>
                <th>
                    Valor de compra
                </th>
                <th>
                    Estado
                </th>
                <th>
                    Ver
                </th>
                <th>
                    Editar
                </th>
                <th>
                    Eliminar
                </th>
            </tr>
        </thead>

           @foreach (var item in Model)
           {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.proveedor.idProveedor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.proveedor.empresa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.fechaCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descuento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valorCompra)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.estado)
                </td>
                <td>
                    <a href="@Url.Action("Details", new { id = item.idCompra})">
                        <i class="glyphicon glyphicon-search"></i>
                        <span class="sr-only"></span>
                    </a>
                    @*@Html.ActionLink("Details", "Details", new { id = item.idCompra})*@
                    @*<span class="glyphicon glyphicon-search"></span>*@
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.idCompra})">
                        <i class="glyphicon glyphicon-pencil"></i>
                        <span class="sr-only"></span>
                    </a>
                    @*@Html.ActionLink("Edit", "Edit", new { id = item.idCompra })*@
                    @*<span class="glyphicon glyphicon-pencil"></span>*@
                </td>
                <td>
                    <a href="@Url.Action("Delete", new { id = item.idCompra})">
                        <i class="glyphicon glyphicon-remove"></i>
                        <span class="sr-only"></span>
                    </a>
                    @*@Html.ActionLink("Delete", "Delete", new { id = item.idCompra })*@
                    @*<span class="glyphicon glyphicon-remove"></span>*@
                </td>
            </tr>
           }

    </table>
</div>

@section Scripts {
    <script>
    function queryParams() {
        return {
            type: 'owner',
            sort: 'updated',
            direction: 'desc',
            per_page: 100,
            page: 1
        };
    }
    </script>

}