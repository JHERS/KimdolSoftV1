@model KimdolSoft.Models.proveedor


@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br /><br /><br /><br /><br /><br /><br />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title"> Editar la información del proveedor </h3>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">

                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.idProveedor)

                    <div class="form-group">
                        @Html.LabelFor(model => model.idProveedor, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-4">
                            @Html.EditorFor(model => model.idProveedor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.idProveedor, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.tipoDocumento, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-4">
                            @Html.DropDownListFor(model => model.tipoDocumento,
                                new List<SelectListItem> {
                                new SelectListItem { Text=""},
                                new SelectListItem { Text="NIT"},
                                new SelectListItem { Text="C.C"},
                                new SelectListItem { Text="T.I"},
                                new SelectListItem { Text="C.E"}
                                },
                                new { @class = "myselect form-control" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.empresa, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-4">
                            @Html.EditorFor(model => model.empresa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.empresa, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.telefonoEmpresa, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-4">
                            @Html.EditorFor(model => model.telefonoEmpresa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.telefonoEmpresa, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.direccionEmpresa, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-4">
                            @Html.EditorFor(model => model.direccionEmpresa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.direccionEmpresa, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.emailEmpresa, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-4">
                            @Html.EditorFor(model => model.emailEmpresa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.emailEmpresa, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.estado, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.DropDownListFor(model => model.estado,
                                new List<SelectListItem> {
                                new SelectListItem { Text="Activo"},
                                new SelectListItem { Text="Inactivo"}
                                },
                                new { @class = "myselect form-control" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Editar la información del vendedor</h3>
            </div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(model => model.nombreVendedor, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-4">
                            @Html.EditorFor(model => model.nombreVendedor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nombreVendedor, "", new { @class = "text-danger" })
                        </div>
                        @Html.LabelFor(model => model.apellidoVendedor, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-4">
                            @Html.EditorFor(model => model.apellidoVendedor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.apellidoVendedor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.telefonoVendedor, htmlAttributes: new { @class = "control-label col-xs-2" })
                        <div class="col-xs-4">
                            @Html.EditorFor(model => model.telefonoVendedor, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.telefonoVendedor, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>




        <div>
            @Html.ActionLink("Regresar", "Index")
        </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
